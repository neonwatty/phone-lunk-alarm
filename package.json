{
  "name": "nextjs-landing-template",
  "version": "1.0.0",
  "description": "A minimal, reusable static Next.js template for product landing pages with GitHub Pages deployment",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint app components --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint app components --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
